       <form action = "/" method = "POST"
         enctype = "multipart/form-data">
          <div>
          <img id="blah" src={{image_path}} alt='' style="width:300px; height:260px;"/> </div>
           <br/>
           <br/>
           <input type='file' name = 'file' onchange="readURL(this);" />
         <input type = "submit"/>
         </form>
   </div>
